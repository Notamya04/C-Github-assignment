#include <iostream>
using namespace std;

int main() {
    cout << "Even numbers from 1 to 50:" << endl;
    
    for (int i = 1; i <= 50; i++) {
        if (i % 2 == 0) {
            cout << i << " ";
        }
    }

    cout << endl;
    return 0;
}
#include <iostream>
using namespace std;

int main() {
    const int SIZE = 10;
    int numbers[SIZE];
    int index = 0;

    cout << "Enter 10 integers:" << endl;

    // Use a while loop to populate the array
    while (index < SIZE) {10.0
        cout << "10 " << (index + 1) << ": ";
        cin >> numbers[index];
        index++;
    }

    // Print the array using a for loop
    cout << "\nYou entered:" << endl;
    for (int i = 0; i < SIZE; i++) {
        cout << numbers[i] << " ";
    }

    cout << endl;
    return 0;
}

